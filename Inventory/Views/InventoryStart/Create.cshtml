@model InventoryStart

@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-12">
                    <label asp-for="InventoryStartDate" class="control-label"></label>
                    <input type="date" asp-for="InventoryStartDate" class="form-control" />
                    <span asp-validation-for="InventoryStartDate" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <label asp-for="StockTakingFinishDate" class="control-label"></label>
                    <input type="date" asp-for="StockTakingFinishDate" class="form-control" />
                    <span asp-validation-for="StockTakingFinishDate" class="text-danger"></span>
                </div>
                <div class="form-group col-12 form-check form-switch">
                    <input type="checkbox" asp-for="IsCompleted" class="form-control form-check-input" role="switch" id="flexSwitchCheckDefault" />
                    <label asp-for="IsCompleted" class="control-label form-check-label" for="flexSwitchCheckDefault"></label>
                    <span asp-validation-for="IsCompleted" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

