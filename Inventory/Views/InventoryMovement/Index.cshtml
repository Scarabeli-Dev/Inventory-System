@model List<InventoryMovement>
@{

}


@if (Model.Count() > 0)
{
    <hr />
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <tr>
                    <th>
                        Nome do Item
                    </th>
                    <th>
                        Tipo de Movimento
                    </th>
                    <th>
                        Depósito
                    </th>
                    <th>
                        Quantidade
                    </th>
                    <th>
                        Data da Movimentação
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MovementeType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Warehouse.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MovementDate)
                    </tr>
                }
            </table>
        </div>
    </div>
}