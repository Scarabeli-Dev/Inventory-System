@model ItemCreateViewModel

@{
    var locations = await ViewBag.Addressing;
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="/css/chosen.min.css">
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Novo Item</h5>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form class="row g-3" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-6">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UnitOfMeasurement" class="control-label"></label>
                        <select asp-for="UnitOfMeasurement" class="form-control"></select>
                        <span asp-validation-for="UnitOfMeasurement" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="AddressingsId" class="control-label"></label>
                        <select id="addressings-select" name="Addressings" multiple class="chosen-select form-control" tabindex="8">
                            @foreach (var item in locations)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>

                    <div id="quantity-fields"></div>


                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/chosen.jquery.min.js" type="text/javascript"></script>
    <script src="~/js/init.js" type="text/javascript"></script>
    <script>
        
    </script>
}
