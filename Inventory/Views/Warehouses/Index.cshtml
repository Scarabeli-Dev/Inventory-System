@model PagingList<Warehouse>

@{
    ViewData["Title"] = "Depósito";
}

<h1>Selecione o @ViewData["Title"] para contagem</h1>

<form method="get" class="nput-group mb-3">

    <div class="input-group mb-3">
        <input name="filter" class="form-control" placeholder="filtro"
               value="@Model.RouteValue["Filter"]" />

        <button type="submit" class="btn btn-info">Procurar</button>
    </div>
</form>

<div class="card">
    <div class="card-body">
        <div class="mt-4 d-grid gap-2 d-flex flex-wrap justify-content-around">
            @foreach (var item in Model)
            {
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary col-4 mb-3" role="button">@Html.DisplayFor(modelItem => item.Name)</a>
            }
        </div>
    </div>
</div>


<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>


